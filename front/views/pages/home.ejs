<%- contentFor('contentPage') %>

    <div id="container-home" class="container component">


        <!-- Topo -->
        <div class="mt-5 mb-5 container-topo">
            <!-- Andar atual -->
            <span id="andar-atual" class="dropdown d-grid gap-2 col-5 col-md-3 col-lg-2" style="width: 155px;">
                <select class="form-select" aria-label="Default select example">
                    <option selected>Térreo</option>
                    <option value="1">1º andar</option>
                    <option value="2">2º andar</option>
                </select>
            </span>
            <!-- Botão dos Filtros -->
            <span id="filtros" class="d-grid gap-2 col-4 col-md-3 col-lg-2">
                <button id="btn-login" class="btn" color="$white" style="height: 48px;" type="button"
                    data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">
                    <i class="mb-1" data-feather="filter"></i>
                    Filtros
                </button>
            </span>
        </div>


        <!-- Salas -->
        <div class="container-salas mt-3 mt-md-5">
            <div class="mt-md-1">

                <div class="sala esquerda py-3 px-3">
                    <h4>Sala 01</h4>
                    <span class="tag-status disponivel px-2 pb-1" style="margin-right:10px;">disponível</span>
                    <button id="btn-plus" type="button" class="btn" color="$white" data-bs-toggle="modal"
                        data-bs-target="#exampleModal">
                        <i style="width: 20px; height: 20px; margin-left:-8px; margin-top:-9px;"
                            data-feather="plus"></i>
                    </button>
                </div>


                <div class="sala py-3 px-3">
                    <h4>Sala 02</h4>
                    <span class="tag-status ocupado px-2 pb-1" style="margin-right:15px;">ocupado</span>
                    <button id="btn-plus" type="button" class="btn" color="$white" data-bs-toggle="modal"
                        data-bs-target="#exampleModal">
                        <i style="width: 20px; height: 20px; margin-left:-8px; margin-top:-9px;"
                            data-feather="plus"></i>
                    </button>
                </div>

                <!-- Sala fantasma -->
                <div class="sala sala-fantasma py-3 px-3">
                </div>
            </div>
        </div>


        <!-- Modal Sala-->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header" style="text-align: center;">
                        <h5 class="modal-title nome-da-sala" id="exampleModalLabel">Sala 01</h5>
                        <span class="status-sala">
                            <i class="feather" data-feather="check" width="18" height="18"></i>
                            disponível
                        </span>
                    </div>
                    <div class="modal-body">
                        <div class="informacoes-sala">
                            <h5 class="topico">Tipo de sala:</h5>
                            <h5 class="conteudo">Sala de aula</h5>

                            <h5 class="topico">Quantidade de espaços:</h5>
                            <h5 class="conteudo">20 carteiras</h5>

                            <h5 class="topico">Contém:</h5>
                            <h5 class="conteudo">01 projetor</h5>
                            <h5 class="conteudo">20 computadores</h5>

                            <h5 class="topico">Próxima reserva:</h5>
                            <h5 class="conteudo">14:00 - Prof Mara Bonates</h5>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="button" class="btn btn-primary">Solicitar</button>
                    </div>
                </div>
            </div>
        </div>


        <!-- Ofcanvas Filtros  -->
        <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel"
            style="width: 48.0676328502%;  max-width: 350px;">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="offcanvasRightLabel">Filtros</h5>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <form action="/filtrar">
                    <!-- filtros Tipo de sala -->
                    <h1 class="topico mb-3">Tipo de sala:</h1>

                    <div class="form-check" style="font-size:16px;">
                        <input class="form-check-input" type="checkbox" value="" id="ftTipo1">
                        <label class="form-check-label" for="ftTipo1">Sala de aula</label>
                    </div>
                    <div class="form-check" style="font-size:16px;">
                        <input class="form-check-input" type="checkbox" value="" id="ftTipo2">
                        <label class="form-check-label" for="ftTipo2">Laboratório</label>
                    </div>
                    <div class="form-check" style="font-size:16px;">
                        <input class="form-check-input" type="checkbox" value="" id="ftTipo3">
                        <label class="form-check-label" for="ftTipo3">Sala temáticas</label>
                    </div>
                    <!-- filtros Status de sala -->
                    <h1 class="topico my-3">Status de sala:</h1>

                    <div class="form-check" style="font-size:16px;">
                        <input class="form-check-input" type="checkbox" value="" id="ftTipo1">
                        <label class="form-check-label" for="ftTipo1">Todos</label>
                    </div>
                    <div class="form-check" style="font-size:16px;">
                        <input class="form-check-input" type="checkbox" value="" id="ftTipo2">
                        <label class="form-check-label" for="ftTipo2">Disponíveis</label>
                    </div>
                    <div class="form-check" style="font-size:16px;">
                        <input class="form-check-input" type="checkbox" value="" id="ftTipo3">
                        <label class="form-check-label" for="ftTipo3">Ocupados</label>
                    </div>
                    <div class="text-center pt-5">
                        <button class="btn mt-5 px-4"
                            style="color:var(--corFonteClara); background:var(--corPrincipal);"
                            type="submit">Filtrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <%- include('../partials/navbar') %>

