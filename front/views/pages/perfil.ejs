<%- contentFor('contentPage') %>

    <div id="container-perfil" class="container component">


        <h4 class="titulo">Perfil</h4>

        <form id="form-perfil">
            <div class="mb-3">
                <label for="nome" class="form-label">Nome:</label>
                <input type="text" id="nome" style="background-color: var(--corFundo);" class="form-control" value="João Victor Barroso Alves" readonly>
            </div>
            <div class="mb-3">
                <label for="idAcademico" class="form-label">Matrícula ou Siape:</label>
                <input type="text" id="perfil-idAcademico" style="background-color: var(--corFundo);" class="form-control" value="509697" readonly>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email:</label>
                <input type="text" id="email" style="background-color: var(--corFundo);" class="form-control" value="509697" readonly>
            </div>
            <div class="mb-3">
                <label for="telefone" class="form-label">Telefone:</label>
                <input type="text" id="telefone" style="background-color: var(--corFundo);" class="form-control" value="509697" readonly>
            </div>
            
            <div class="mt-3 d-grid gap-2 col-6 mx-auto">
                <button id="btn-editar" color="$white" class="btn" type="button">
                    <i class="feather" data-feather="edit" width="18" height="18"></i>
                    Editar perfil
                </button>
            </div>
        </form>

        <div id="btn-geral" class="d-grid gap-2 col-6 mx-auto">
            <button id="btn-logout" class="btn btn-primary" type="button">Logout</button>
        </div>
    </div>

    <%- include('../partials/navbar') %>